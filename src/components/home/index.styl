      &:before
        content: ''
        position: absolute
        left: -50vw
        top: 0
        width: 50vw
        height: 6px
        background: #FF297E
        // background: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='5' height='5' viewBox='0 0 5 5'><rect width='5' height='5' x='0' y='0' fill='%23FF297E' fill-rule='evenodd'/></svg>")
        // background-size: 100% auto

      &:after
        content: ''
        position: absolute
        right: -26px
        bottom: -22px
        width: 52px
        height: 52px
        background: url($cdnUrl + '/techby/home/circuit_light.svg')

    > .circuit-2
      position: absolute
      bottom: 188px
      left: 64%
      width: 490px
      height: 6px
      background: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='490' height='6' viewBox='0 0 490 6'><defs><linearGradient id='circuit_2-a' x1='11.503%' x2='75.823%' y1='49.993%' y2='50.004%'><stop offset='0%' stop-color='%23FF297E'/><stop offset='68.699%' stop-color='%23FE87B6'/><stop offset='100%' stop-color='%23FF297E'/></linearGradient></defs><polygon fill='url(%23circuit_2-a)' points='504 0 504 17 0 17 0 0'/></svg>")

      &:before
        content: ''
        position: absolute
        right: -50vw
        top: 0px
        width: 50vw
        height: 6px
        background: #FF297E
        // background: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='5' height='5' viewBox='0 0 5 5'><rect width='5' height='5' x='0' y='0' fill='%23FF297E' fill-rule='evenodd'/></svg>")

      &:after
        content: ''
        position: absolute
        left: -26px
        bottom: -22px
        width: 52px
        height: 52px
        background: url($cdnUrl + '/techby/home/circuit_light.svg')

  > .products-banner
    text-align: center
    padding: 56px 16px

    > .title
      font-h4()
      color: getColor('$primary900')

    > .description
      font-subtitle1()
      color: getColor('$primary90054')
      margin-top: 4px

  > .product
    padding: 56px 16px
    background: getColor('$bgColorAlt1')

    &.is-light
      background: getColor('$bgColor')

    > .container
      container()

      > .image
        background-size: 100%
        width: 100%
        height: 0
        padding-bottom: 72%
        margin-bottom: 32px

      > .content
        > .name
          font-h6()
          font-weight: 700
          color: getColor('$primary900')

          > .by-tech-by
            color: getColor('$secondary500')
            font-weight: 300

        > .description
          font-subtitle1()
          margin-top: 16px
          color: getColor('$primary90054')

        > .link
          font-button()
          color: getColor('$secondary500')
          text-transform: uppercase
          display: block
          margin-top: 20px
          display: flex
          align-items: center

          > .icon
            margin-left: 12px

        > .apps
          margin-top: 36px

          > .app
            display: flex
            align-items: center
            margin-bottom: 16px

            &:last
              margin-bottom: 0

            > .icon
              width: 40px
              height: 40px
              border: 2px solid getColor('$primary300')
              border-radius: 50%
              margin-right: 20px

            > .text
              font-subtitle1()

  @media (min-width: $breakPointMedium)
    > .header
      > .top
        background: transparent
        padding: 32px 16px

        > .container
          > .logo
            color: getColor('$primaryMainText')

      > .content
        padding: 68px 16px 300px 16px


    > .product
      &.is-light
        > .container
          flex-direction: row-reverse

          > .image
            margin-left: 142px
            margin-right: 0

      > .container
        display: flex
        align-items: center

        > .image
          width: 612px
          height: 440px
          padding-bottom: 0
          margin-bottom: 0
          margin-right: 142px

        > .content > .apps
          display: flex

          > .app
            margin-right: 40px
            margin-bottom: 0

            &:last
              margin-right: 0
