@require '../../vars'

.z-home
  overflow-x: hidden

  > .header
    background: getColor('$primary900')
    position: relative

    > .top
      background: getColor('$bgColor')
      padding: 16px

      > .container
        container()

        > .logo
          font-size: 24px
          color: getColor('$primary900')
          display: flex
          align-items: center

          > .icon
            width: 35px
            height: 32px
            background: url($cdnUrl + '/techby/logo.svg')
            background-size: 100%
            margin-right: 12px

    > .content
      padding: 68px 16px 260px 16px
      text-align: center

      > .title
        font-h4()
        color: getColor('$primaryMainText')
        margin-bottom: 24px

      > .description
        font-subtitle1()
        color: getColor('$primaryMainText54')
        max-width: 830px
        margin: 0 auto

    > .circuit-1
      position: absolute
      bottom: 70px
      right: 33%
      width: 945px
      height: 166px
